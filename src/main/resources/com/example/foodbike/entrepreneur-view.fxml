<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #43e97b 0%, #38f9d7 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodbike.EntrepreneurController">
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
                <Label style="-fx-font-size: 28; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="FoodBikeðŸŸ">
               <padding>
                  <Insets left="400.0" />
               </padding></Label>
                <Label style="-fx-font-size: 16; -fx-text-fill: #bdc3c7;" text="Entrepreneur Dashboard">
               <padding>
                  <Insets left="300.0" />
               </padding></Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userLabel" style="-fx-font-size: 14; -fx-text-fill: #ffffff;" />
                <Button onAction="#handleTotalBalance" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4;" text="ðŸ’° Balance" />
                <Button onAction="#handleLogout" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 4;" text="Logout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <VBox fx:id="applicationMessageBox" spacing="10" style="-fx-padding: 10; -fx-border-radius: 5;" />
            
            <VBox fx:id="restaurantInfoBox" spacing="10">
                <HBox spacing="10">
                    <Label fx:id="restaurantNameLabel" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="My Restaurant" />
                </HBox>
            </VBox>

            <HBox spacing="10">
                <Button fx:id="applyRestaurantButton" onAction="#handleApplyRestaurant" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4;" text="Apply for Restaurant" />
            </HBox>
            
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="My Menu" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleAddMenuItem" style="-fx-padding: 8 15; -fx-font-size: 11; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4;" text="+ Add Menu Item" />
                </HBox>
                <ScrollPane fitToWidth="true" prefHeight="350" style="-fx-background-color: #E8F5E9; -fx-border-color: transparent; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                    <GridPane fx:id="menuBox" hgap="15" vgap="15" style="-fx-padding: 10;" />
                </ScrollPane>
            </VBox>

            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Orders" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleRefreshOrders" style="-fx-padding: 8 15; -fx-font-size: 11; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4;" text="ðŸ”„ Refresh Orders" />
                </HBox>
                <TabPane style="-fx-font-size: 12;">
                    <Tab closable="false" text="Pending Orders">
                        <TableView fx:id="pendingOrdersTable" style="-fx-font-size: 12; -fx-background-color: #E8F5E9; -fx-border-radius: 8;">
                            <columns>
                                <TableColumn prefWidth="150" text="Order ID" />
                                <TableColumn prefWidth="150" text="Customer" />
                                <TableColumn prefWidth="200" text="Items" />
                                <TableColumn prefWidth="100" text="Total" />
                                <TableColumn prefWidth="100" text="Status" />
                                <TableColumn prefWidth="150" text="Action" />
                            </columns>
                        </TableView>
                    </Tab>

                    <Tab closable="false" text="Confirmed Orders">
                        <TableView fx:id="confirmedOrdersTable" style="-fx-font-size: 12; -fx-background-color: #E8F5E9; -fx-border-radius: 8;">
                            <columns>
                                <TableColumn prefWidth="150" text="Order ID" />
                                <TableColumn prefWidth="150" text="Customer" />
                                <TableColumn prefWidth="200" text="Items" />
                                <TableColumn prefWidth="100" text="Total" />
                                <TableColumn prefWidth="100" text="Status" />
                            </columns>
                        </TableView>
                    </Tab>
                </TabPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>
