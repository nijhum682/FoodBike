<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #a8edea 0%, #fed6e3 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodbike.OrderHistoryController">
    <top>
        <BorderPane style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <center>
                <Label style="-fx-font-size: 28; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Order HistoryðŸ“‹" />
            </center>
            <right>
                <HBox spacing="15" style="-fx-padding: 10;">
                    <Button onAction="#handleBack" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 4;" text="Back" />
                </HBox>
            </right>
        </BorderPane>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">
            <Label fx:id="titleLabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Your Orders" />
            
            <ScrollPane fitToWidth="true" style="-fx-border-color: transparent; -fx-background-color: transparent;">
                <VBox fx:id="ordersVBox" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
