<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #fa709a 0%, #fee140 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodbike.BikerController">
    <top>
        <BorderPane style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <left>
                <Label style="-fx-font-size: 28; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="FoodBikeðŸŸ                          Biker ðŸš´">
               <padding>
                  <Insets left="400.0" />
               </padding></Label>
            </left>
            <right>
                <HBox spacing="15" style="-fx-padding: 10;">
                    <Label fx:id="userLabel" style="-fx-font-size: 14; -fx-text-fill: #ffffff;" text="Welcome, Biker" />
                    <Button onAction="#handleLogout" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 4;" text="Logout" />
                </HBox>
            </right>
        </BorderPane>
    </top>

    <center>
        <VBox style="-fx-padding: 20;">
            <TabPane style="-fx-padding: 10;" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Ready for Delivery">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Orders Ready for Delivery" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button onAction="#handleRefreshOrders" style="-fx-padding: 8 15; -fx-font-size: 11; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4;" text="ðŸ”„ Refresh Orders" />
                        </HBox>
                        
                        <HBox spacing="10" style="-fx-padding: 10 0;">
                            <Label style="-fx-font-size: 14; -fx-text-fill: #34495e; -fx-padding: 5;" text="Filter by Division:" />
                            <javafx.scene.control.ComboBox fx:id="divisionFilter" style="-fx-pref-width: 200;" />
                        </HBox>
                        
                        <ScrollPane fitToWidth="true" style="-fx-border-color: transparent;">
                            <TableView fx:id="readyOrdersTable" style="-fx-background-color: #FFF8E1; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" />
                        </ScrollPane>
                    </VBox>
                </Tab>
                
                <Tab text="Delivered Orders">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Completed Deliveries" />
                        
                        <ScrollPane fitToWidth="true" style="-fx-border-color: transparent;">
                            <TableView fx:id="deliveredOrdersTable" style="-fx-background-color: #FFF8E1; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" />
                        </ScrollPane>
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </center>
</BorderPane>
