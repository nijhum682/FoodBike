<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #ffecd2 0%, #fcb69f 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodbike.MenuController">
    <top>
        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="624.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label fx:id="restaurantNameLabel" style="-fx-font-size: 28; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Restaurant Name" />
            <HBox spacing="10" style="-fx-padding: 5 0 0 0;" alignment="CENTER">
                <Label fx:id="ratingLabel" style="-fx-font-size: 14; -fx-text-fill: #f39c12; -fx-font-weight: bold;" text="★ 4.5" />
                <Button fx:id="viewReviewsBtn" onAction="#handleViewReviews" style="-fx-padding: 5 10; -fx-font-size: 11; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4;" text="View Reviews" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <VBox prefHeight="278.0" prefWidth="28.0" spacing="15" style="-fx-border-color: transparent; -fx-border-radius: 10; -fx-padding: 15; -fx-background-color: #87CEEB; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Menu" />
                <ScrollPane fitToWidth="true" style="-fx-control-inner-background: #87CEEB; -fx-border-color: transparent;">
                    <VBox fx:id="menuItemsVBox" spacing="12" style="-fx-padding: 5; -fx-background-color: #87CEEB;" />
                </ScrollPane>
            </VBox>

            <VBox maxWidth="310.0" prefHeight="278.0" prefWidth="310.0" spacing="15" style="-fx-border-color: transparent; -fx-border-radius: 10; -fx-padding: 15; -fx-background-color: #E8F8F5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3); -fx-min-width: 300; -fx-max-width: 300;">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Order Summary" />
                
                <ScrollPane fitToWidth="true" style="-fx-control-inner-background: #E8F8F5; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                    <VBox fx:id="selectedItemsVBox" spacing="8" style="-fx-padding: 5;" />
                </ScrollPane>

                <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-radius: 4;">
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Total:" />
                    <Label fx:id="totalLabel" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="৳0.00" />
                </HBox>

                <HBox spacing="10">
                    <Button maxWidth="Infinity" onAction="#handleConfirmOrder" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" text="Confirm Order" HBox.hgrow="ALWAYS" />
                    <Button maxWidth="Infinity" onAction="#handleClearOrder" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" text="Clear" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button maxWidth="Infinity" onAction="#handleBack" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" text="Back" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
