<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.foodbike.AdminController">
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
                <Label style="-fx-font-size: 28; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="FoodBike" />
                <Label style="-fx-font-size: 16; -fx-text-fill: #bdc3c7;" text="Admin Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleLogout" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 4;" text="Logout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button onAction="#handleAddRestaurant" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4;" text="Add Restaurant" />
                <Button onAction="#handleViewRestaurants" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4;" text="View All Restaurants" />
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-max-width: 1200;">
                <TextField fx:id="searchField" promptText="Search restaurants..." style="-fx-padding: 10; -fx-font-size: 14; -fx-border-radius: 4; -fx-flex-grow: 1;" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleSearch" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4;" text="Search" />

                <Separator orientation="VERTICAL" style="-fx-padding: 0 5;" />

                <Label prefHeight="26.0" prefWidth="55.0" style="-fx-font-size: 12; -fx-text-fill: #555;" text="Division:" />
                <ComboBox fx:id="divisionCombo" style="-fx-padding: 8; -fx-font-size: 12; -fx-min-width: 150;">
                    <tooltip>
                        <Tooltip text="Filter by restaurant division" />
                    </tooltip>
                </ComboBox>
                <Button onAction="#handleFilter" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 4;" text="Filter" />
                <Button onAction="#handleClear" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 4;" text="Clear" />
            </HBox>

            <!-- Restaurants Table -->
            <TableView fx:id="restaurantsTable" style="-fx-font-size: 12;">
                <columns>
                    <TableColumn prefWidth="100" text="Restaurant ID" />
                    <TableColumn prefWidth="130" text="Name" />
                    <TableColumn prefWidth="120" text="Division" />
                    <TableColumn prefWidth="180" text="Address" />
                    <TableColumn prefWidth="100" text="Rating" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
